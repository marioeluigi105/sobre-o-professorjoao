// ------------------------------
// SISTEMA DO QUIZ
// ------------------------------

let numero = 0;

function carregarPergunta() {
    const area = document.getElementById("quiz");

    if (numero >= perguntas.length) {
        area.innerHTML = `
            <div class="pergunta">
                <h2>ğŸ‰ ParabÃ©ns! VocÃª finalizou o quiz! ğŸ‰</h2>
            </div>`;
        return;
    }

    let q = perguntas[numero];

    area.innerHTML = `
        <div class="pergunta">
            <h2>${q.pergunta}</h2>
            ${q.alternativas.map((alt, i) => `
                <button class="opcao" onclick="responder(${i})">${alt}</button>
            `).join("")}
        </div>
    `;
}

function responder(opcao) {
    let correta = perguntas[numero].correta;

    if (opcao === correta) {
        alert("âœ”ï¸ Acertou!");
    } else {
        alert("âŒ Errou!");
    }

    numero++;
    carregarPergunta();
}

// Inicializa o quiz
window.onload = carregarPergunta;
